<!-- banner section -->
<section class="inner-banner-section">
    <div class="item" style="background: url({{ 'banner-bg.png' | asset_url }}) no-repeat center center/cover;">
        <div class="container">
            <div class="inner-banner-content">
                <h1>{{ page_title }}</h1>
            </div>
        </div>
    </div>
</section>

<main>

    <!-- About Us Sectoion-->
    <section class="common-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-12 col-sm-12">
                    <div class="about-img">
                        <img src="{{ section.settings.about_banner | img_url: 'master' }}" alt="">
                    </div>
                </div>
                <div class="col-lg-6 col-md-12 col-sm-12">
                    <div class="about-text">
                        <h3>{{ section.settings.heading }}</h3>
                        <div class="about-text-para">
                          {{ page.content }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

{% schema %}
{
  "name": "About Setting",
  "settings": [
    {
      "type": "image_picker",
      "label": "Banner Image",
      "id": "about_banner"
    },
    {
      "type": "text",
      "label": "Heading",
      "id": "heading"
    }
  ]
}
{% endschema %}