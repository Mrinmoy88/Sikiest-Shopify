<script>
    var phoneInput = document.getElementById("phone");
    var errorSpan = document.querySelector(".error");

    phoneInput.addEventListener("input", function() {
      if (phoneInput.validity.patternMismatch) {
        errorSpan.style.display = "inline";
      } else {
        errorSpan.style.display = "none";
      }
    });

    var emailInput = document.getElementById("email");
    var errorSpan1 = document.querySelector(".error1");

    emailInput.addEventListener("input", function() {
      if (emailInput.validity.typeMismatch) {
        errorSpan1.style.display = "inline";
      } else {
        errorSpan1.style.display = "none";
      }
    });

    var namenput = document.getElementById("name");
    var errorSpan2 = document.querySelector(".error2");

    namenput.addEventListener("input", function() {
      if (namenput.validity.patternMismatch) {
        errorSpan2.style.display = "inline";
      } else {
        errorSpan2.style.display = "none";
      }
    });
</script>

<script>
  $(document).ready(function() {
    // Attach change event to the variant select
    $('#variant-select').on('change', function() {
      //alert('ok');
      // Get the selected variant
      var selectedVariant = $(this).find(':selected');
      
      // Update the inventory quantity in the span
      $('#pcs').text(selectedVariant.data('inventory'));
      $('#price').text(selectedVariant.data('price'));
    });
  });
</script>

<button id="buy-now-btn">Buy Now</button>

<script>
  document.getElementById('buy-now-btn').addEventListener('click', function(e) {
    e.preventDefault();

    // Get the selected variant ID
    var selectedVariantId = document.getElementById('p-id').value;

    // Get the selected variant ID
    var quantity = document.getElementById('quantity').value;

    console.log(selectedVariantId);
    console.log(',');
    console.log(quantity);

    // Use AJAX to add the selected variant to the cart
    jQuery.post('/cart/add.js', { quantity: quantity, id: selectedVariantId }, function() {
      // Redirect to the checkout page
      window.location.href = '/checkout';
  });
</script>


