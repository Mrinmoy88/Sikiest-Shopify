<!-- footer Section -->
<footer class="footer-section">
  <div class="container">
    <div class="footer-top">
      <div class="row">
        <div class="col-lg-3 col-md-6 col-sm-12 col-12">
          <div class="footer-box">
            <div class="footer-box-head">
              <h5>Contact Us</h5>
            </div>
            <ul class="footer-list">
              <li>
                <a href="#">
                  {{ section.settings.add }}
                </a>
              </li>
              <li>
                <a href="#">
                  <i class="fa-solid fa-phone-volume"></i>
                  {{ section.settings.phone }}
                </a>
              </li>
              <li>
                <a href="#" id="email">
                  <i class="fa-regular fa-envelope"></i>
                  {{ section.settings.email }}
                </a>
              </li>
            </ul>
          </div>

        </div>
        <div class="col-lg-3 col-md-6 col-sm-12 col-12">
          <div class="footer-box">
            <div class="footer-box-head">
              <h5>Account</h5>
            </div>
            <ul class="footer-list">
              {% for link in linklists['footer'].links %}
                <li>
                  <a href="{{ link.url }}">{{ link.title }}</a>
                </li>
              {% endfor %}
            </ul>
          </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12 col-12">
          <div class="footer-box">
            <div class="footer-box-head">
              <h5>Quick Links</h5>
            </div>
            <ul class="footer-list">
              {% for link in linklists['quick-links'].links %}
                <li>
                  <a href="{{ link.url }}">{{ link.title }}</a>
                </li>
              {% endfor %}
            </ul>
          </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12 col-12">
          <div class="footer-box">
            <div class="footer-box-head">
              <h5>Get Weekly Update</h5>
            </div>
            {% comment %} <form class="email-input">
                                                      <input type="email" class="form-input" placeholder="Email">
                                                      <button class="btn email-img">
                                                          <img src="{{ 'email-icon.png' | asset_url }}">
                                                      </button>
                                              </form> {% endcomment %}
            {% form 'customer'
              , class: 'newsletter-form email-input' %}
              <input
                type="hidden"
                name="contact[tags]"
                value="newsletter">
              <input
                class="form-input"
                type="text"
                value="{{ form.email }}"
                name="contact[email]"
                placeholder="Your email address"
                required>
              {% comment %} <input class="btn email-img" type="submit" name="commit" value="Subscribe"> {% endcomment %}

              <button class="btn email-img" name="commit">
                <img src="{{ 'email-icon.png' | asset_url }}">
              </button>

              {%- if form.errors -%}
                <small class="newsletter-form__message form__message" id="Newsletter-error--{{ section.id }}">
                  {%- render 'icon-error' -%}
                  {{- form.errors.translated_fields.email | capitalize }}
                  {{ form.errors.messages.email -}}
                </small>
              {%- endif -%}

              {%- if form.posted_successfully? -%}
                <h3
                  class="newsletter-form__message newsletter-form__message--success form__message"
                  id="Newsletter-success--{{ section.id }}"
                  tabindex="-1"
                  autofocus>
                  {% render 'icon-success' -%}
                  {{- 'newsletter.success' | t }}
                </h3>
              {%- endif -%}
            {% endform %}


            <ul class="footer-follow">
              <li>
                <a href="{{ section.settings.fb }}">
                  <i class="fa-brands fa-facebook-f"></i>
                </a>
              </li>
              <li>
                <a href="{{ section.settings.in }}">
                  <i class="fa-brands fa-instagram"></i>
                </a>
              </li>
              <li>
                <a href="{{ section.settings.tw }}">
                  <i class="fa-brands fa-twitter"></i>
                </a>
              </li>
              <li>
                <a href="{{ section.settings.lnd }}">
                  <i class="fa-brands fa-linkedin-in"></i>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="footer-copyright">
      <p>{{ section.settings.copy }}</p>
    </div>
  </div>
</footer>

